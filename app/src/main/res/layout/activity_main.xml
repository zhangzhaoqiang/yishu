<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_deviceID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="deviceID" />

        <EditText
            android:id="@+id/et_deviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="deviceName" />

        <EditText
            android:id="@+id/et_serverIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="et_serverIP" />

        <EditText
            android:id="@+id/et_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="port" />

        <EditText
            android:id="@+id/et_teachercode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="teachercode" />

        <EditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="user" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password" />
        <TextView
            android:id="@+id/tv_serverip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="中转服务设置"
            />
        <TextView
            android:id="@+id/tv_ip"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/et_server_port"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:hint="ServerPort" />

        <EditText
            android:id="@+id/et_server_broadcast_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="BroadcastPort" />
        <EditText
            android:id="@+id/et_pd_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="产品出货编号" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_isstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否自启动" />
            <CheckBox
                android:id="@+id/cb_isupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否自动更新" />
            <CheckBox
                android:id="@+id/cb_isbind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否绑定编号更新" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_zhongzhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作为中中转服务" />
            <CheckBox
                android:id="@+id/cb_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作为学员机" />
            <CheckBox
                android:id="@+id/cb_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作为教学机" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_reboot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="重启" />

            <Button
                android:id="@+id/but_apktest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="wifiAPK测试" />
            <Button
                android:id="@+id/but_bluetest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="蓝牙测试" />
            <Button
                android:id="@+id/but_systemui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="隐藏上下" />
            <Button
                android:id="@+id/but_lock_systemui"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁死上下"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="打开中转服务" />
            <Button
                android:id="@+id/but_test"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="测试配置" />

            <Button
                android:id="@+id/but_release"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="正式配置" />
            <Button
                android:id="@+id/but_baocun"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="保存" />
        </LinearLayout>
        <Button
            android:id="@+id/but_net_update"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="公网更新" />
        <Button
            android:id="@+id/but_update"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="内网更新" />

        <Button
            android:id="@+id/but_update_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="资源配置下载" />
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_uitext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

        </ScrollView>
    </LinearLayout>
</RelativeLayout>